{{#if removedItem}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    {{removedItem}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
    <div class="col-6">
        <h1>Items</h1>
    </div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/add-item" type="button" class="btn btn-primary align-self-center"><i class="bi bi-plus-lg"></i> Add
            Item</a>
    </div>
</div>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Orgin</th>
            <th scope="col">Current</th>
            <th scope="col">Catagory</th>
            <th scope="col">Storage GB</th>
            <th scope="col">Memory MB</th>
            <th scope="col">Manufacturer</th>
            <th scope="col">Form Factor</th>
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>

        {{#each rows}}

        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.title}}</td>
            <td>{{this.descr}}</td>
            <td>{{this.orgin}}</td>
            <td>{{this.current}}</td>
            <th>{{this.catagory}}</th>
            <td>{{this.strg_amnt_gb}}</td>
            <td>{{this.mem_amnt_mb}}</td>
            <td>{{this.mnfctr}}</td>
            <td>{{this.frm_fctr}}</td>
            <td class="text-end">
                <div>
                    <a href="/view-item/{{this.id}}" type="button" class="btn btn-light btn-sm"><i
                            class="bi bi-eye"></i> View</a>
                    <a href="/edit-item/{{this.id}}" type="button" class="btn btn-light btn-sm"><i
                            class="bi bi-pencil"></i> Edit</a>
                    <a href="/{{this.id}}" type="button" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i>
                        Delete</a>
                </div>
            </td>
        </tr>

        {{/each}}

    </tbody>
</table>