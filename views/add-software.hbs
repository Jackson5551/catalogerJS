<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/software-catalog">Software Catalog</a></li>
            <li class="breadcrumb-item active" aria-current="page">New Item</li>
        </ol>
    </nav>

    {{#if alert}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{alert}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}


    <form class="row g-3 needs-validation" method="POST" action="/add-software" encType="multipart/form-data">
        {{> software-form}}
    </form>
</div>