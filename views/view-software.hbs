<div class="container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/software-catalog">Software Catalog</a></li>
            <li class="breadcrumb-item active" aria-current="page">View Item</li>
        </ol>
    </nav>

    <div class="view-user p-5">
        {{#each rows}}
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Manufacturer</th>
                            <th scope="col">Version</th>
                            <th scope="col">Format</th>
                            <th scope="col"># of Media</th>
                            <th scope="col">Architecture</th>
                            <th scope="col">Product Key (if applicable)</th>
                            <th scope="col" class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.mnfctr}}</td>
                            <td>{{this.version}}</td>
                            <td>{{this.format}}</td>
                            <td>{{this.num_of_media}}</td>
                            <td>{{this.architecture}}</td>
                            <td>{{this.prod_key}}</td>
                            <td class="text-end">
                                <div>
                                    <a href="/edit-software/{{this.id}}" type="button"
                                        class="btn btn-light btn-sm mt-1"><i class="bi bi-pencil"></i> Edit</a>
                                    <a href="/softwaredel/{{this.id}}" type="button" class="btn btn-danger btn-sm mt-1"><i
                                            class="bi bi-trash"></i>
                                        Delete</a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>


            </div>
        </div>
        {{/each}}
        <img src="{{send}}" alt="" srcset="">

    </div>
</div>