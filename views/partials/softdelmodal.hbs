<div class="modal fade" id="softdelmodal{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><i class="bi bi-exclamation-triangle"></i> Delete Software?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <strong class="text-danger">Are you sure you want to delete this entry:</strong>
                <br/>
                <h2><strong>{{this.name}}</strong></h2>
                <hr />
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        Version
                        <strong class="text-danger">{{this.version}}</strong></li>
                    <li class="list-group-item">
                        Manufacturer
                        <strong class="text-danger">{{this.mnfctr}}</strong>
                    </li>
                    <li class="list-group-item">
                        Catagory
                        <strong class="text-danger">{{this.catagory}}</strong>
                    </li>
                    <li class="list-group-item">
                        Format
                        <strong class="text-danger">{{this.format}}</strong>
                    </li>
                    <li class="list-group-item">
                        Architecture
                        <strong class="text-danger">{{this.architecture}}</strong>
                    </li>
                    <li class="list-group-item">
                        Number of Media
                        <strong class="text-danger">{{this.num_of_media}}</strong>
                    </li>
                    <li class="list-group-item">
                        Product Key
                        <strong class="text-danger">{{this.prod_key}}</strong>
                    </li>
                    <li class="list-group-item">
                        Date Added
                        <strong class="text-danger">{{this.time_added}}</strong>
                    </li>
                    <li class="list-group-item">
                        Last Modified
                        <strong class="text-danger">{{this.last_modified}}</strong>
                    </li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <a href="/softwaredel/{{this.id}}" type="button" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</a>
            </div>
        </div>
    </div>
</div>